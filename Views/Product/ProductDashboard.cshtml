@model IEnumerable<OnlineShopping_BIT_2025.Models.Product>

@{
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>

<form asp-action="ProductDashboard">
    Title:<input type="text" name="title"/>
    <input type="submit" value="Search" />
</form>

<table class="table">
    <tbody>
        <tr>
        @foreach (var item in Model)
        {
            <td style="border:1px solid red"> 
                <img src="~/@item.ProductPhoto"  style="width: 100px; height: 100px; border: 2px solid #ccc;"  /><br />
                   @Html.DisplayFor(modelItem => item.Title)<br />
                   Price: Rs. @Html.DisplayFor(modelItem => item.Price) <br />
                   Category : @Html.DisplayFor(modelItem => item.Category.Name) <br />
                   <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        }
        </tr>
    </tbody>
</table>
